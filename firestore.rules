rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==========================================
    // Helper Functions
    // ==========================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Secure Admin Check: Hardcoded Owner OR Role in Firestore
    function isAdmin() {
      return isAuthenticated() && (
        request.auth.token.email == 'alexandra@skinselflove.pt' ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'])
      );
    }
    
    function isPharmacyOwner(pharmacyId) {
      return isAuthenticated() && request.auth.token.pharmacyId == pharmacyId;
    }
    
    function isDateAssignedToUser(dateStr) {
      return isAdmin() || 
             (exists(/databases/$(database)/documents/dateAssignments/$(dateStr)) &&
             get(/databases/$(database)/documents/dateAssignments/$(dateStr)).data.pharmacyId == request.auth.token.pharmacyId);
    }

    // ==========================================
    // Users & RBAC (NEW)
    // ==========================================

    match /users/{userId} {
      // Owner/Admin can read/write all users
      // Users can read their own profile
      allow read: if isAdmin() || request.auth.uid == userId;
      
      // Creation restricted to:
      // 1. User is authenticated
      // 2. User info matches auth
      // 3. User email exists in 'invites' collection
      allow create: if isAuthenticated() && 
                      request.auth.uid == userId &&
                      exists(/databases/$(database)/documents/invites/$(request.resource.data.email));
                      
      allow update, delete: if isAdmin();
    }

    match /invites/{email} {
      // Admins manage invites
      allow read, write: if isAdmin();
      // Users can check IF they are invited (by known email ID)
      allow read: if isAuthenticated() && request.auth.token.email == email;
    }

    // ==========================================
    // Core Collections
    // ==========================================
    
    match /pharmacies/{pharmacyId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /config/{configId} {
      allow read, write: if isAdmin();
    }
    
    match /admins/{adminId} {
      // Legacy Admin Collection - readable by new Admins for migration
      allow read, write: if isAdmin();
    }

    match /dateAssignments/{dateStr} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /reservations/{reservationId} {
      allow read: if isAdmin() || (isAuthenticated() && resource.data.pharmacyId == request.auth.token.pharmacyId);
      allow create: if isDateAssignedToUser(request.resource.data.date) &&
                      (isAdmin() || (isAuthenticated() && request.resource.data.pharmacyId == request.auth.token.pharmacyId));
      allow update: if isAdmin() || (isAuthenticated() && resource.data.pharmacyId == request.auth.token.pharmacyId);
      allow delete: if isAdmin();
    }

    // ==========================================
    // Helpers / Legacy
    // ==========================================
    
    match /schedules/{dateStr} {
      allow read, write: if true;
    }

    match /month_availability/{monthKey} {
      allow read: if true;
      allow write: if true;
    }
  }
}
