rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==========================================
    // Helper Functions
    // ==========================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Secure Admin Check: Hardcoded Owner OR Role in Firestore
    function isAdmin() {
      return isAuthenticated() && (
        request.auth.token.email == 'jose.antonio@skinselflove.com.pt' ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'])
      );
    }
    
    function isPharmacyOwner(pharmacyId) {
      return isAuthenticated() && request.auth.token.pharmacyId == pharmacyId;
    }
    
    function isDateAssignedToUser(dateStr) {
      return isAdmin() || 
             (exists(/databases/$(database)/documents/dateAssignments/$(dateStr)) &&
             get(/databases/$(database)/documents/dateAssignments/$(dateStr)).data.pharmacyId == request.auth.token.pharmacyId);
    }

    // ==========================================
    // Users & RBAC (NEW)
    // ==========================================

    match /users/{userId} {
      // Owner/Admin can read/write all users
      // Users can read their own profile
      allow read: if isAdmin() || request.auth.uid == userId;
      
      // Admin only write
      allow write: if isAdmin();
    }

    match /invites/{email} {
      // Admins manage invites
      allow read, write: if isAdmin();
      // Users can check IF they are invited (by known email ID)
      allow read: if isAuthenticated() && request.auth.token.email == email;
    }

    // ==========================================
    // Core Collections
    // ==========================================
    
    match /pharmacies/{pharmacyId} {
      // Public read needed for Login Dropdown (Names only)
      // PINs are moved to pharmacy_secrets
      allow read: if true; 
      allow write: if isAdmin();
    }

    match /pharmacy_secrets/{pharmacyId} {
      // Strictly Admin only - Contains PINs
      allow read, write: if isAdmin();
    }

    match /config/{configId} {
      allow read, write: if isAdmin();
    }
    
    match /admins/{adminId} {
      allow read, write: if isAdmin();
    }

    match /dateAssignments/{dateStr} {
      allow read: if true; // Public read? Or Auth?
      allow write: if isAdmin();
    }
    
    match /reservations/{reservationId} {
      allow read: if isAdmin() || (isAuthenticated() && resource.data.pharmacyId == request.auth.token.pharmacyId);
      // Fallback for missing custom claim: Check user profile?
      // For now, relying on simple auth check for migration stability
      allow create, update: if isAuthenticated(); 
      allow delete: if isAdmin();
    }

    // ==========================================
    // Helpers / Legacy
    // ==========================================
    
    match /schedules/{dateStr} {
      // LOCKDOWN: Only authenticated users
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); 
    }

    match /month_availability/{monthKey} {
      // LOCKDOWN: Only authenticated users
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
  }
}
